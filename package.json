{
  "name": "gorilla-build",
  "version": "0.1.13",
  "description": "Gorilla: Stop monkeying around and build better scripts.",
  "bin": {
    "gorilla": "dist/cli.js"
  },
  "scripts": {
    "build": "rollup --config",
    "test": "npx jest ./src",
    "test:c": "npx jest --coverage  ./src",
    "test:w": "npx jest --watchAll  ./src",
    "integ": "npx jest ./integs",
    "integ:w": "npx jest --watchAll ./integs",
    "prepare": "husky install"
  },
  "author": "Alex King",
  "license": "MIT",
  "dependencies": {
    "@rollup/plugin-node-resolve": "^13.0.0",
    "meow": "^9.0.0",
    "rollup": "^2.33.3",
    "rollup-plugin-typescript": "^1.0.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.3.0",
    "@types/npm": "^7.19.0",
    "@types/sinon": "^10.0.2",
    "husky": "^7.0.1",
    "jest": "^27.3.1",
    "lint-staged": "^11.0.0",
    "npm": "^7.16.0",
    "prettier": "2.4.1",
    "sinon": "^11.1.1",
    "ts-jest": "^26.4.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apsking/gorilla.git"
  },
  "keywords": [
    "greasemonkey",
    "tampermonkey",
    "violentmonkey",
    "script",
    "userscript",
    "typescript",
    "build",
    "tool-chain",
    "cli"
  ],
  "bugs": {
    "url": "https://github.com/apsking/gorilla/issues"
  },
  "homepage": "https://github.com/apsking/gorilla#readme",
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  },
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/integs/tmp/**"
  ]
}
