{
  "name": "gorilla-build",
  "version": "0.1.8",
  "description": "Gorilla: Stop monkeying around and build better scripts.",
  "bin": {
    "gorilla": "dist/cli.js"
  },
  "scripts": {
    "build": "rollup --config",
    "test": "npx jest ./src",
    "test:c": "npx jest --coverage  ./src",
    "test:w": "npx jest --watchAll  ./src",
    "integ": "npx jest ./integs",
    "integ:w": "npx jest --watchAll ./integs"
  },
  "author": "Alex King",
  "license": "MIT",
  "dependencies": {
    "meow": "^8.0.0",
    "rollup": "^2.33.3",
    "rollup-plugin-typescript": "^1.0.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5",
    "@rollup/plugin-node-resolve": "^10.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/jest": "^26.0.15",
    "@types/npm": "^2.0.31",
    "@types/node": "^14.14.8",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "npm": "^6.14.8",
    "prettier": "2.1.2",
    "ts-jest": "^26.4.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apsking/gorilla.git"
  },
  "keywords": [
    "greasemonkey",
    "tampermonkey",
    "violentmonkey",
    "script",
    "userscript",
    "typescript",
    "build",
    "tool-chain",
    "cli"
  ],
  "bugs": {
    "url": "https://github.com/apsking/gorilla/issues"
  },
  "homepage": "https://github.com/apsking/gorilla#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  },
  "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/integs/tmp/**"
    ]
}
